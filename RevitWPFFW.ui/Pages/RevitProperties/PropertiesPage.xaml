<Page x:Class="PB.RevitWPFFW.ui.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PB.RevitWPFFW.ui"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="400"
      Title="PropertiesPage">

    <!-- Resource Dictionary Reference-->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../App.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel Background="{StaticResource MainBackgroundBrush}">

        <!--Sub Properties Page-->
        <Grid x:Name="SubPropertyPage1">
            <local:PropertiesPageSub1/>
        </Grid>

        <Grid x:Name="SubPropertyPage2">
            <local:PropertiesPageSub2/>
        </Grid>

        <Grid x:Name="SubPropertyPage3">
            <local:PropertiesPageSub3/>
        </Grid>

        <Grid x:Name="SubPropertyPage4">
            <local:PropertiesPageSub4/>
        </Grid>

        <Border Style="{StaticResource RevitPropertyGridBorder}"/>

    </StackPanel>
</Page>
